void RotationOccur(int o,int stepp){
  for(int j=0;j<o;j++){
    //max step =2048
    for(int a=0;a<stepp;a++){
      OneStep(false);
      //Minimum time between steps
      delay(2);
    }
    for(int a=0;a<stepp;a++){
      OneStep(true);
      //Minimum time between steps
      delay(2);
    }
  }
}
